<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/mawin</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/px50</item>
        <item name="android:gravity">center|left</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_view">
        <item name="android:layout_marginTop">50px</item>
        <item name="cardCornerRadius">9dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="card_linear">
        <item name="android:layout_marginLeft">18dp</item>
    </style>

    <style name="text_view_font_color_red">
        <item name="fontFamily">@font/savespace_rounded_regular</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>

